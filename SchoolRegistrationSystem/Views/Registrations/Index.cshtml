@model IEnumerable<SchoolRegistrationSystem.Models.Registration>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a class="btn btn-info" asp-action="Create">Add New Registration</a>
</p>
<div class="container-fluid py-4">
    <h4 class="text-center text-uppercase">List of Registered Students</h4>
    <table id="pickStudent" class="table table-striped table-bordered">
        <thead class="bg-dark text-white">
            <tr>
                <th>Course </th>
                <th>Instructor</th>
                <th>Student</th>
                <th>Registration Type</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Course.CourseName</td>
                    <td>@item.Instructor.EmailAddress</td>
                    <td>@item.Student.FirstName</td>
                    <td>@item.StudentTypeNavigation.RegisterType</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RegistrationId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.RegistrationId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.RegistrationId">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
