@model SchoolRegistrationSystem.Models.Courses

@{
    ViewData["Title"] = "Create";
}
<link type="text/css" rel="stylesheet" href="~/css/StyleForm.css" />

<h3 class="padtitle">Create Course</h3>
<div class="container formcontent">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CourseNumber" class="control-label"></label>
                    <input asp-for="CourseNumber" class="form-control" />
                    <span asp-validation-for="CourseNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseName" class="control-label"></label>
                    <input asp-for="CourseName" class="form-control" />
                    <span asp-validation-for="CourseName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseDescription" class="control-label"></label>
                    <textarea asp-for="CourseDescription" class="form-control" rows="6"></textarea>
                    <span asp-validation-for="CourseDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Units" class="control-label"></label>
                    <input asp-for="Units" class="form-control" />
                    <span asp-validation-for="Units" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input id="successbtn" type="submit" value="Create" class="btn btn-primary" />
                    <span> <a asp-action="Index">Back to List</a></span>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
